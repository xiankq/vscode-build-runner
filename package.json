{
  "name": "build-runner",
  "displayName": "Dart build_runner",
  "description": "Dart build_runner tools in VSCode.",
  "publisher": "Kaiqun",
  "version": "2.2.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": "https://github.com/xiankq/vscode-build-runner",
  "categories": [
    "Other"
  ],
  "keywords": [
    "flutter",
    "dart",
    "build_runner",
    "json_serializable",
    "freezed",
    "built_value",
    "flutter_mobx",
    "build runner",
    "generate",
    "generator"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "workspaceContains:pubspec.yaml",
    "workspaceContains:*/pubspec.yaml",
    "workspaceContains:*/*/pubspec.yaml"
  ],
  "extensionDependencies": [
    "Dart-Code.dart-code"
  ],
  "icon": "static/icon.png",
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Dart build_runner",
      "properties": {
        "build_runner.fvm": {
          "type": "boolean",
          "default": false,
          "description": "Use FVM prefix"
        },
        "build_runner.excludes": {
          "type": "array",
          "default": [],
          "description": "Files excluded during scanning"
        }
      }
    },
    "commands": [
      {
        "category": "build-runner",
        "command": "build_runner.build",
        "title": "build",
        "icon": "$(play)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.watch",
        "title": "watch",
        "icon": "$(server)"
      },
      {
        "category": "build-runner",
        "command": "build_runner.quit",
        "title": "quit",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "build_runner.watch",
          "when": "false"
        },
        {
          "command": "build_runner.build",
          "when": "false"
        },
        {
          "command": "build_runner.quit",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "build_runner.watch",
          "when": "view == build_runner_view && viewItem == file",
          "group": "inline"
        },
        {
          "command": "build_runner.build",
          "when": "view == build_runner_view && viewItem == file",
          "group": "inline"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "build_runner_view",
          "name": "BUILD RUNNER"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "release": "bumpp -r",
    "ci:build": "pnpm package && vsce package --no-dependencies",
    "ci:publish-vsce": "vsce publish --no-dependencies",
    "ci:publish-ovsx": "ovsx publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^10.2.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.10.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "pidtree": "^0.6.0",
    "@rollup/pluginutils": "^5.3.0",
    "yaml": "^2.8.1"
  }
}